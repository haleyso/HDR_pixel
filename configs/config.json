{
    "name": "HDR_Pixel",
    "n_gpu": 1,

    "arch": {
        "type": "CNN",
        "args": {}
    },
    "data_loader": {
        "type": "GooglePixelTrainDataLoader",
        "args":{
            "data_dir": "/media/data4b/haleyso/HDRPlusData/train",
            "batch_size": 4,
            "patch_size": 100,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 1
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "L2",
    "metrics": [
        "mse", "ssim"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "/media/data4b/haleyso/HDR_Pixel",
        "save_period": 10,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 100,

        "tensorboard": true
    }
}